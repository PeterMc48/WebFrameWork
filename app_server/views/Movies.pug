extends layout

block content
  .container
    .row
      .col-12
        h1 Movie
        .search-container
          form(action='/action_page.php')
            input(type='text' placeholder='Search..' name='search')
            button(type='submit') Submit

      .row
        .col-12
          .card.card-primary.review-card
            .card-block
              img(src="../images/poster.jpg")
              a.btn.btn-primary.float-right(href='/reviews') Add review
              h2.card-title Customer reviews
              .row.review
                .col-12.no-gutters.review-header
                  span.rating
                    i.fa.fa-star
                    i.fa.fa-star
                    i.fa.fa-star
                    i.fa.fa-star
                    i.fa.fa-star
                  span.reviewAuthor Simon Holmes
                  small.reviewTimestamp 16 February 2017
                .col-12
                  p Great movie, well worth the watch.
              .row.review
                .col-12.no-gutters.review-header
                  span.rating
                    i.fa.fa-star
